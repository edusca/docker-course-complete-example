{% extends 'layout.twig' %}

{% block body %}
    <div class="col-md-12">
        <h2>New product</h2>
    </div>

    <div class="col-md-6">
        <form class="form" action="{{ host }}{{ action }}" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Nombre del producto</label>
                <input type="text" name="name" id="name" class="form-control" placeholder="Ingresa el nombre que será usado para vender" value="{{ product ? product.name : '' }}">
            </div>

            <div class="form-group">
                <label for="image">Imagen descriptiva</label>
                <input type="file" name="image" id="image" class="form-control">
            </div>

            <div class="form-group">
                <label for="amount">Precio</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <select id="currency" name="currency" class="form-control" value="{{ product ? product.currency : '' }}">
                            <option>ARS</option>
                            <option>USD</option>
                            <option>EUR</option>
                        </select>
                    </div>

                    <input type="number" step="0.01" name="amount" id="amount" class="form-control" value="{{ product ? product.amount : '' }}">
                </div>
            </div>

            <div class="form-group">
                <label for="description">Descripción </label>
                <textarea type="text" name="description" id="description" class="form-control" placeholder="Describe lo que vendes">{{ product ? product.description : '' }}</textarea>
            </div>

            <input type="submit" class="btn btn-primary" value="Guardar">
        </form>
    </div>

{% endblock %}